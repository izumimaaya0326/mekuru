<div class="container">
   <div class="row">
      <h2 style="text-align: center;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>新規会員登録</h2>

　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"ユーザーネーム" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '(例))Mekuru' %>
    </div>

      <div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, class:"col-xs-5", autocomplete: "email", placeholder: '(例)nagajake@naga.co.jp' %>
      </div>

      <div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class:"col-xs-5", autocomplete: "new-password" %>
      </div>

      <div class="field row col-md-offset-4" style="margin-bottom: 10px;">
          <%= f.label :"パスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, class:"col-xs-5", autocomplete: "new-password" %>
      </div>


      <div class="actions" style="margin-bottom: 10px;">
          <%= f.submit "登録確認ページへ", class:"btn btn-primary col-xs-4 actions col-md-offset-4", style:"margin-bottom: 10px;" %>
      </div>
          <% end %>
    </div>

      <div class="row" style="text-align: center; margin-bottom: 10px;">
        <%= render "devise/shared/links" %>
  </div>
</div>

